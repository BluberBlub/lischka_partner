---
interface Props {
    title: string;
    subtitle?: string;
    ctaText?: string;
    ctaHref?: string;
}

const {
    title = "Kontaktieren Sie uns jetzt und lassen Sie uns gemeinsam Ihre rechtlichen Angelegenheiten l√∂sen.",
    subtitle,
    ctaText = "Kontaktieren Sie uns",
    ctaHref = "/kontakt/",
} = Astro.props;
---

<section class="py-16 md:py-24 bg-[--color-primary-900] text-white">
    <div class="container text-center">
        {
            subtitle && (
                <p class="font-medium mb-4 text-sm tracking-wide uppercase text-[--color-accent-500]">
                    {subtitle}
                </p>
            )
        }
        <h2
            class="text-2xl md:text-3xl lg:text-4xl font-serif font-bold mb-8 max-w-3xl mx-auto"
            style="color: #ffffff;"
        >
            {title}
        </h2>
        <a
            href={ctaHref}
            class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 font-semibold rounded-lg transition-all hover:translate-y-[-2px] hover:shadow-lg bg-[--color-accent-500] text-[--color-primary-950]"
        >
            {ctaText}
            <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
        </a>
    </div>
</section>
