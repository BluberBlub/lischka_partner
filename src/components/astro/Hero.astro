---
import { images } from "../../data/images";
import type { ImageMetadata } from "astro";

interface Props {
    subtitle?: string;
    keywords?: string[];
    description?: string;
    ctaText?: string;
    ctaHref?: string;
    backgroundImage?: string | ImageMetadata;
}

const {
    subtitle = "Ravensburg | Bad Waldsee",
    keywords = ["Durchsetzen", "Abwehren", "Verhandeln", "Gestalten"],
    description = "Wir bieten Ihnen maßgeschneiderte Lösungen für Ihre rechtlichen Angelegenheiten und vertreten engagiert Ihre Interessen. Nutzen Sie unser Wissen und unsere Erfahrung. Wir helfen Ihnen, die beste Lösung für Ihr Anliegen zu finden.",
    ctaText = "Kontaktieren Sie uns",
    ctaHref = "/kontakt/",
    backgroundImage = images.hero.main,
} = Astro.props;

import { Image } from "astro:assets";
---

<section class="relative min-h-[70vh] md:min-h-[80vh] flex items-center">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <Image
            src={backgroundImage}
            alt="Hero Background"
            width={1920}
            height={1080}
            class="w-full h-full object-cover"
            loading="eager"
        />
    </div>

    <!-- Dark overlay for text readability -->
    <div class="absolute inset-0 bg-black/40 z-0"></div>

    <div class="container relative z-10">
        <div class="max-w-3xl">
            <!-- Subtitle -->
            <p
                class="font-medium mb-4 md:mb-6 text-sm md:text-base tracking-wide uppercase text-[--color-accent-500]"
            >
                {subtitle}
            </p>

            <!-- Keywords -->
            <div class="flex flex-wrap gap-3 md:gap-4 mb-6 md:mb-8">
                {
                    keywords.map((keyword, index) => (
                        <span
                            class="text-2xl md:text-4xl lg:text-5xl font-serif font-bold text-white"
                            style={`animation: fadeInUp 0.6s ease-out ${index * 0.15}s both;`}
                        >
                            {keyword}
                            {index < keywords.length - 1 && (
                                <span class="mx-2 text-[--color-accent-500]">
                                    ·
                                </span>
                            )}
                        </span>
                    ))
                }
            </div>

            <!-- Description -->
            <p
                class="text-lg md:text-xl leading-relaxed mb-8 md:mb-10 max-w-2xl text-neutral-200"
            >
                {description}
            </p>

            <!-- CTA Button -->
            <a
                href={ctaHref}
                class="inline-flex items-center gap-2 px-6 md:px-8 py-3 md:py-4 font-semibold rounded-lg transition-all hover:translate-y-[-2px] hover:shadow-lg bg-[--color-accent-500] text-[--color-primary-950]"
            >
                {ctaText}
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
