---
/**
 * TrustBar - Displays key trust indicators
 * Used on homepage and inner pages to establish credibility
 */
interface Props {
    variant?: "default" | "compact";
}

const { variant = "default" } = Astro.props;

const stats = [
    { value: "40+", label: "Jahre Erfahrung" },
    { value: "6", label: "Fachanw√§lte" },
    { value: "2", label: "Standorte" },
];
---

<section class={`bg-primary-light ${variant === "compact" ? "py-6" : "py-12"}`}>
    <div class="container">
        <div class="grid grid-cols-3 gap-4 md:gap-8 text-center">
            {
                stats.map((stat) => (
                    <div>
                        <div class="text-2xl md:text-4xl lg:text-5xl font-bold text-primary mb-1 md:mb-2">
                            {stat.value}
                        </div>
                        <div class="text-sm md:text-base text-neutral-600 font-medium">
                            {stat.label}
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
