---
import { mainNavigation } from "../../data/navigation";
import { images } from "../../data/images";
import MobileNav from "../react/MobileNav";
import GlobalSearch from "../react/GlobalSearch";
import { Phone } from "lucide-react";
import { Image } from "astro:assets";

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white border-b border-neutral-200">
    <div class="container">
        <div class="flex items-center justify-between h-16 md:h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2 group">
                <Image
                    src={images.logo}
                    alt="Lischka & Partner - RechtsanwÃ¤lte"
                    class="h-10 md:h-12 w-auto"
                    loading="eager"
                />
            </a>

            <!-- Desktop Navigation -->
            <nav
                class="hidden lg:flex items-center gap-1"
                aria-label="Hauptnavigation"
            >
                {
                    mainNavigation.map((item) => (
                        <div class="relative group">
                            {item.children ? (
                                <>
                                    <button
                                        class="px-4 py-2 text-sm font-medium text-neutral-700 hover:text-[--color-primary-900] hover:bg-neutral-50 rounded-lg transition-colors"
                                        aria-expanded="false"
                                        aria-haspopup="true"
                                    >
                                        {item.label}
                                        <svg
                                            class="inline-block w-4 h-4 ml-1"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M19 9l-7 7-7-7"
                                            />
                                        </svg>
                                    </button>
                                    <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                                        <div class="bg-white rounded-lg shadow-lg border border-neutral-200 py-2 min-w-[280px]">
                                            {item.children.map((child) => (
                                                <a
                                                    href={child.href}
                                                    target={
                                                        child.external
                                                            ? "_blank"
                                                            : undefined
                                                    }
                                                    rel={
                                                        child.external
                                                            ? "noopener noreferrer"
                                                            : undefined
                                                    }
                                                    class="block px-4 py-2 text-sm text-neutral-700 hover:text-[--color-primary-900] hover:bg-neutral-50 transition-colors"
                                                >
                                                    {child.label}
                                                    {child.external && (
                                                        <svg
                                                            class="inline-block w-3 h-3 ml-1 opacity-50"
                                                            fill="none"
                                                            stroke="currentColor"
                                                            viewBox="0 0 24 24"
                                                        >
                                                            <path
                                                                stroke-linecap="round"
                                                                stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                            />
                                                        </svg>
                                                    )}
                                                </a>
                                            ))}
                                        </div>
                                    </div>
                                </>
                            ) : (
                                <a
                                    href={item.href}
                                    class:list={[
                                        "px-4 py-2 text-sm font-medium rounded-lg transition-colors",
                                        currentPath === item.href ||
                                        (item.href !== "/" &&
                                            currentPath.startsWith(item.href))
                                            ? "text-[--color-primary-900] bg-[--color-primary-50]"
                                            : "text-neutral-700 hover:text-[--color-primary-900] hover:bg-neutral-50",
                                    ]}
                                    aria-current={
                                        currentPath === item.href
                                            ? "page"
                                            : undefined
                                    }
                                >
                                    {item.label}
                                </a>
                            )}
                        </div>
                    ))
                }
                <!-- Polish Flag -->
                <a
                    href="/service/polnisch/"
                    class="p-2 ml-1 rounded-lg hover:bg-neutral-50 transition-colors"
                    aria-label="Polnische Version"
                >
                    <svg
                        viewBox="0 0 16 10"
                        class="h-4 w-6 rounded-sm shadow-sm border border-neutral-200"
                    >
                        <path fill="#fff" d="M0 0h16v5H0z"></path>
                        <path fill="#dc143c" d="M0 5h16v5H0z"></path>
                    </svg>
                </a>
            </nav>

            <!-- Contact Button + Mobile Nav -->
            <div class="flex items-center gap-4">
                <GlobalSearch client:load />
                <a
                    href="/kontakt/"
                    class="hidden md:inline-flex items-center gap-2 px-4 py-2 bg-[--color-primary-900] text-white text-sm font-medium rounded-lg hover:bg-[--color-primary-800] transition-colors"
                >
                    <Phone className="w-4 h-4" />
                    Kontakt
                </a>

                <!-- Mobile Navigation -->
                <div class="lg:hidden">
                    <MobileNav
                        client:visible
                        navigation={mainNavigation}
                        currentPath={currentPath}
                    />
                </div>
            </div>
        </div>
    </div>
</header>
