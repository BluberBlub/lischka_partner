---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Section from "../../../components/astro/Section.astro";
import PageHeader from "../../../components/astro/PageHeader.astro";
import CTASection from "../../../components/astro/CTASection.astro";
import { images } from "../../../data/images";
import { Image } from "astro:assets";

const seo = {
    title: "Polnisch / Obsługa Prawna - Lischka & Partner",
    description:
        "Porady i reprezentacje prawne w języku polskim i niemieckim. Beratung und Rechtsvertretung in polnischer und deutscher Sprache.",
};

const services = [
    {
        title: "Prawo Rodzinne / Familienrecht",
        items: [
            "Rozwody (Scheidung)",
            "Alimenty (Unterhalt)",
            "Władza rodzicielska (Sorgerecht)",
            "Podział majątku (Zugewinn)",
        ],
    },
    {
        title: "Prawo Spadkowe / Erbrecht",
        items: [
            "Testamenty",
            "Zachowek (Pflichtteil)",
            "Dziedziczenie",
            "Sprawy spadkowe",
        ],
    },
    {
        title: "Prawo Karne / Strafrecht",
        items: [
            "Obrona w sprawach karnych",
            "Wykroczenia drogowe",
            "Wypadki",
            "Mandaty",
        ],
    },
    {
        title: "Prawo Cywilne / Zivilrecht",
        items: ["Umowy", "Odszkodowania", "Windykacja", "Sprawy konsumenckie"],
    },
];
---

<BaseLayout title={seo.title} description={seo.description}>
    <PageHeader
        title="Polnisch / Obsługa Prawna"
        subtitle="Porady i reprezentacje prawne w języku polskim i niemieckim"
        backgroundImage={images.pageHeaders.polnisch}
        breadcrumbs={[
            { label: "Service", href: "#" },
            { label: "Polnisch", href: "/service/polnisch/" },
        ]}
    />

    <Section padding="lg">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
            <div class="prose prose-lg text-neutral-600">
                <h2 class="text-primary font-serif">
                    Witamy w Kancelarii Lischka & Partner
                </h2>
                <p>
                    Rozumiemy, jak ważne jest zrozumienie niuansów prawnych we
                    własnym języku. Dlatego oferujemy pełną obsługę prawną w
                    języku polskim.
                </p>
                <p>
                    Nasz zespół zapewnia profesjonalne doradztwo prawne i
                    reprezentację przed sądami oraz urzędami w Niemczech.
                    Specjalizujemy się w prawie rodzinnym, spadkowym, cywilnym
                    oraz karnym.
                </p>
                <div
                    class="bg-primary-50 p-6 rounded-xl border-l-4 border-primary mt-8"
                >
                    <p class="font-medium text-primary m-0">
                        "Jesteśmy tu, aby pomóc Ci rozwiązać Twoje problemy
                        prawne w Niemczech, mówiąc w Twoim języku."
                    </p>
                </div>
            </div>

            <div
                class="bg-white p-8 rounded-2xl shadow-lg border border-neutral-100"
            >
                <div class="flex items-center gap-6 mb-8">
                    <div
                        class="w-24 h-24 rounded-full overflow-hidden border-4 border-white shadow-md flex-shrink-0"
                    >
                        <Image
                            src={images.team.christophLischka}
                            alt="Rechtsanwalt Christoph Lischka"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-primary">
                            Christoph Lischka
                        </h3>
                        <p class="text-accent font-medium">
                            Rechtsanwalt / Adwokat
                        </p>
                        <p class="text-sm text-neutral-500 mt-1">
                            Mówimy po polsku
                        </p>
                    </div>
                </div>

                <p class="mb-6 text-neutral-600">
                    Skontaktuj się z nami bezpośrednio, aby umówić się na poradę
                    w języku polskim.
                </p>

                <a
                    href="tel:+49751363530"
                    class="flex items-center justify-center gap-2 w-full py-3 bg-primary text-white rounded-lg font-medium hover:bg-primary-800 transition-colors mb-4"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path></svg
                    >
                    Zadzwoń: 0751 36353-0
                </a>
                <a
                    href="mailto:info@lischka-partner.de"
                    class="flex items-center justify-center gap-2 w-full py-3 bg-white text-primary border-2 border-primary rounded-lg font-medium hover:bg-neutral-50 transition-colors"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path></svg
                    >
                    Napisz E-Mail
                </a>
            </div>
        </div>
    </Section>

    <Section padding="lg" background="light">
        <h2
            class="text-3xl font-serif font-bold text-center text-primary mb-12"
        >
            Zakres Usług / Unsere Leistungen
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                services.map((service) => (
                    <div class="bg-white p-6 rounded-xl shadow-sm border border-neutral-100 hover:shadow-md transition-shadow">
                        <h3 class="text-xl font-bold text-primary mb-4 h-14 flex items-center">
                            {service.title}
                        </h3>
                        <ul class="space-y-2">
                            {service.items.map((item) => (
                                <li class="flex items-start gap-2 text-neutral-600">
                                    <svg
                                        class="w-5 h-5 text-accent mt-0.5 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M5 13l4 4L19 7"
                                        />
                                    </svg>
                                    <span>{item}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>
    </Section>

    <CTASection
        title="Potrzebujesz pomocy prawnej?"
        subtitle="Jesteśmy do Twojej dyspozycji."
        ctaText="Skontaktuj się z nami"
        ctaHref="/kontakt/"
    />
</BaseLayout>
