---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/astro/Section.astro";
import PageHeader from "../../components/astro/PageHeader.astro";
import JobPosting from "../../components/astro/JobPosting.astro";
import CTASection from "../../components/astro/CTASection.astro";
import { jobPostings, careerIntro } from "../../data/career";
import { images } from "../../data/images";

const seo = {
    title: "Karriere",
    description:
        "Werden Sie Teil unseres Teams. Wir bieten engagierten Mitarbeiterinnen und Mitarbeitern ein professionelles und kollegiales Arbeitsumfeld.",
};
---

<BaseLayout title={seo.title} description={seo.description}>
    <!-- Hero -->
    <PageHeader
        title={careerIntro.title}
        subtitle={careerIntro.subtitle}
        backgroundImage={images.pageHeaders.karriere}
    />

    <!-- Intro Section -->
    <Section background="light" padding="lg">
        <div class="max-w-4xl">
            <h2
                class="text-2xl md:text-3xl font-serif font-bold mb-6"
                style="color: #003466;"
            >
                Arbeiten bei Lischka & Partner
            </h2>
            <div class="prose prose-lg max-w-none text-neutral-600 space-y-4">
                <p>
                    Wir bieten engagierten Mitarbeiterinnen und Mitarbeitern ein
                    professionelles und kollegiales Arbeitsumfeld.<br
                    />Fachliche Qualität, kontinuierliche Weiterbildung und ein
                    respektvolles Miteinander prägen unsere tägliche Arbeit.
                </p>
                <p>
                    Lernen Sie unsere Kanzlei als Arbeitgeber kennen und
                    entdecken Sie Ihre beruflichen Perspektiven bei uns.
                </p>
            </div>
        </div>
    </Section>

    <!-- Benefits -->
    <Section padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-8"
            style="color: #003466;"
        >
            Was wir bieten
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div
                class="bg-white p-6 rounded-xl shadow-sm border border-neutral-100"
            >
                <div
                    class="w-12 h-12 rounded-full bg-[--color-accent-100] flex items-center justify-center mb-4"
                >
                    <svg
                        class="w-6 h-6 text-[--color-accent-600]"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                        ></path>
                    </svg>
                </div>
                <h3
                    class="text-lg font-semibold text-[--color-primary-900] mb-2"
                >
                    Kollegiales Team
                </h3>
                <p class="text-neutral-600 text-sm">
                    Ein freundlicher Umgangston und gegenseitige Unterstützung
                    prägen unseren Arbeitsalltag.
                </p>
            </div>
            <div
                class="bg-white p-6 rounded-xl shadow-sm border border-neutral-100"
            >
                <div
                    class="w-12 h-12 rounded-full bg-[--color-accent-100] flex items-center justify-center mb-4"
                >
                    <svg
                        class="w-6 h-6 text-[--color-accent-600]"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                        ></path>
                    </svg>
                </div>
                <h3
                    class="text-lg font-semibold text-[--color-primary-900] mb-2"
                >
                    Weiterbildung
                </h3>
                <p class="text-neutral-600 text-sm">
                    Kontinuierliche fachliche Fortbildung und persönliche
                    Entwicklungsmöglichkeiten.
                </p>
            </div>
            <div
                class="bg-white p-6 rounded-xl shadow-sm border border-neutral-100"
            >
                <div
                    class="w-12 h-12 rounded-full bg-[--color-accent-100] flex items-center justify-center mb-4"
                >
                    <svg
                        class="w-6 h-6 text-[--color-accent-600]"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                        ></path>
                    </svg>
                </div>
                <h3
                    class="text-lg font-semibold text-[--color-primary-900] mb-2"
                >
                    Moderne Kanzlei
                </h3>
                <p class="text-neutral-600 text-sm">
                    Tageslichtdurchflutete Räume und modernste technische
                    Ausstattung an beiden Standorten.
                </p>
            </div>
        </div>
    </Section>

    <!-- Job Postings -->
    <Section background="light" padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-8"
            style="color: #003466;"
        >
            Aktuelle Stellenausschreibungen
        </h2>
        <div class="space-y-8">
            {jobPostings.map((job) => <JobPosting job={job} />)}
        </div>
    </Section>

    <!-- CTA -->
    <CTASection title="Haben Sie Fragen? Kontaktieren Sie uns." />
</BaseLayout>
