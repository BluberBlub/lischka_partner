---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/astro/Section.astro";
import PageHeader from "../../components/astro/PageHeader.astro";
import LocationCard from "../../components/astro/LocationCard.astro";
import ContactForm from "../../components/react/ContactForm";
import { locations } from "../../data/locations";
import { images } from "../../data/images";

const seo = {
    title: "Kontakt",
    description:
        "Kontaktieren Sie die Anwaltskanzlei Lischka & Partner in Ravensburg oder Bad Waldsee. Wir sind gerne für Sie da.",
};
---

<BaseLayout title={seo.title} description={seo.description}>
    <!-- Hero -->
    <PageHeader
        title="Kontakt"
        subtitle="Nutzen Sie unser Wissen und unsere Erfahrung. Wir helfen Ihnen, die beste Lösung für Ihr Anliegen zu finden."
        backgroundImage={images.pageHeaders.kontakt}
    />

    <Section background="light" padding="lg">
        <p class="text-lg text-neutral-600 max-w-3xl">
            Wir sind gerne für Sie da und stehen Ihnen für ein Gespräch zur
            Verfügung.
        </p>
    </Section>

    <!-- Locations -->
    <Section padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold text-[--color-primary-900] mb-8"
        >
            Unsere Standorte
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl">
            {locations.map((location) => <LocationCard location={location} />)}
        </div>
    </Section>

    <!-- Contact Form -->
    <Section background="light" padding="lg">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
                <h2
                    class="text-2xl md:text-3xl font-serif font-bold text-[--color-primary-900] mb-4"
                >
                    Senden Sie uns eine Nachricht
                </h2>
                <p class="text-neutral-600 mb-6">
                    Mit nebenstehendem Formular können Sie Ihre Anfrage an uns
                    senden. Wir werden Ihre Anfrage schnellstmöglich bearbeiten.
                </p>
                <div class="space-y-4 text-neutral-700">
                    <div>
                        <p class="font-medium">Telefon:</p>
                        <a
                            href="tel:+4975136353"
                            class="hover:text-[--color-primary-900]"
                            >0751 36353-0</a
                        >
                    </div>
                    <div>
                        <p class="font-medium">Telefax:</p>
                        <p>0751 36353-29</p>
                    </div>
                    <div>
                        <p class="font-medium">E-Mail:</p>
                        <a
                            href="mailto:ravensburg@lischka-partner.de"
                            class="hover:text-[--color-primary-900]"
                        >
                            ravensburg@lischka-partner.de
                        </a>
                    </div>
                    <div>
                        <p class="font-medium">Adresse:</p>
                        <p>Pfannenstiel 16, 88214 Ravensburg</p>
                    </div>
                </div>
            </div>
            <div>
                <ContactForm client:visible />
            </div>
        </div>
    </Section>
</BaseLayout>
