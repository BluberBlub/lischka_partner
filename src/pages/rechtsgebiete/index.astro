---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/astro/Section.astro";
import PageHeader from "../../components/astro/PageHeader.astro";
import PracticeAreaSearch from "../../components/react/PracticeAreaSearch";
import CTASection from "../../components/astro/CTASection.astro";
import {
    practiceAreas,
    practiceAreasIntro,
    inkassoInfo,
    experienceYears,
} from "../../data/practice-areas";
import { images } from "../../data/images";

const seo = {
    title: "Rechtsgebiete",
    description:
        "Qualität durch Fokus: Wir haben uns bewusst spezialisiert, um Ihnen in den für Sie wichtigen Rechtsgebieten stets die bestmögliche Beratung zu bieten. Über 40 Jahre Erfahrung.",
};
---

<BaseLayout title={seo.title} description={seo.description}>
    <!-- Hero -->
    <PageHeader
        title={practiceAreasIntro.title}
        subtitle={practiceAreasIntro.subtitle}
        backgroundImage={images.pageHeaders.rechtsgebiete}
    />

    <!-- Intro Section -->
    <Section background="light" padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-6"
            style="color: #003466;"
        >
            Unsere Schwerpunkte
        </h2>
        <div class="prose prose-lg max-w-none text-neutral-600 space-y-4">
            {
                practiceAreasIntro.description.map((paragraph) => (
                    <p>{paragraph}</p>
                ))
            }
        </div>

        <div
            class="mt-8 inline-flex items-center gap-2 px-4 py-2 bg-[--color-accent-100] text-[--color-accent-800] rounded-full text-sm font-medium"
        >
            <span>Über {experienceYears} Jahre Erfahrung und Kompetenz</span>
        </div>
    </Section>

    <!-- Practice Areas Search -->
    <Section padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-8"
            style="color: #003466;"
        >
            Alle Rechtsgebiete
        </h2>
        <PracticeAreaSearch areas={practiceAreas} client:load />
    </Section>

    <!-- Inkasso Section -->
    <Section background="light" padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-6"
            style="color: #003466;"
        >
            {inkassoInfo.title}
        </h2>
        <div class="prose prose-lg max-w-none text-neutral-600 space-y-4">
            {inkassoInfo.description.map((paragraph) => <p>{paragraph}</p>)}
        </div>
    </Section>

    <!-- CTA -->
    <CTASection
        title="Benötigen Sie rechtlichen Beistand? Kontaktieren Sie uns."
    />
</BaseLayout>
