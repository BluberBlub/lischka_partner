---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/astro/Section.astro";
import PageHeader from "../../components/astro/PageHeader.astro";
import LocationCard from "../../components/astro/LocationCard.astro";
import CTASection from "../../components/astro/CTASection.astro";
import { locations } from "../../data/locations";
import { images } from "../../data/images";

const seo = {
    title: "Kanzlei",
    description:
        "Tageslichtdurchflutete Kanzleiräume in schönster Lage über den Dächern von Ravensburg sowie im Schlosshof Bad Waldsee. Seit 1983 kompetent für Sie da.",
};

const history = [
    {
        year: 1983,
        text: "wurde unsere Kanzlei in Ravensburg begründet und im Zuge der Wiedervereinigung",
    },
    { year: 1990, text: "um unsere Kanzlei in Pirna (Sachsen) erweitert." },
    {
        year: 1999,
        text: "haben wir in Bad Waldsee eine weitere Kanzlei eröffnet.",
    },
];
---

<BaseLayout title={seo.title} description={seo.description}>
    <!-- Page Header -->
    <PageHeader
        title="Die Kanzlei"
        subtitle="Tageslichtdurchflutete Kanzleiräume in schönster Lage über den Dächern von Ravensburg sowie im Schlosshof Bad Waldsee."
        backgroundImage={images.pageHeaders.kanzlei}
    />

    <!-- Intro Section -->
    <Section background="light" padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-6"
            style="color: #003466;"
        >
            Über unsere Kanzlei
        </h2>
        <div class="prose prose-lg max-w-none text-neutral-600 space-y-4">
            <p>
                Tageslichtdurchflutete Kanzleiräume in schönster Lage über den
                Dächern von Ravensburg sowie im Schlosshof Bad Waldsee und ein
                stets freundlicher Umgangston fördern den Teamgeist.
            </p>
            <p>
                Fachliche Qualifikation und persönliches Engagement unserer
                Anwälte führten zu einer kontinuierlichen Expansion unserer
                Tätigkeit.
            </p>
        </div>
    </Section>

    <!-- History Timeline (horizontal) -->
    <Section padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-12 text-center"
            style="color: #003466;"
        >
            Unsere Geschichte
        </h2>
        <div class="relative">
            <!-- Connector Line (Desktop) -->
            <div
                class="hidden md:block absolute top-10 left-[15%] right-[15%] h-1 bg-[--color-primary-900]"
            >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-4">
                {
                    history.map((item) => (
                        <div class="relative flex flex-col items-center text-center">
                            <div class="flex-shrink-0 w-20 h-20 rounded-full flex items-center justify-center font-bold text-xl shadow-lg border-4 border-white bg-[--color-primary-900] text-white z-10">
                                {item.year}
                            </div>
                            <p class="mt-4 text-neutral-700 max-w-[200px]">
                                {item.text}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </Section>

    <!-- Bad Waldsee Info -->
    <Section background="light" padding="lg">
        <p class="text-lg text-neutral-700 max-w-3xl">
            Unsere Mandanten in Bad Waldsee schätzen besonders, dass Fachanwälte
            vor Ort zur Verfügung stehen und sie nicht nach Ravensburg, Biberach
            oder Ulm fahren müssen.
        </p>
    </Section>

    <!-- Technology -->
    <Section padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-6"
            style="color: #003466;"
        >
            Moderne Infrastruktur
        </h2>
        <div class="prose prose-lg max-w-none text-neutral-600 space-y-4">
            <p>
                Unsere Kanzleien sind mit modernsten Kommunikationssystemen
                ausgestattet und miteinander verbunden. Über Videokonferenz ist
                jeder Anwalt bei Bedarf jederzeit für alle Mandanten erreichbar.
            </p>
            <p>
                Internetpräsenz, Videokonferenz, Schreiben mit Spracherkennung,
                KI sowie Zugriff auf externe Rechtsdatenbanken mit über 1,5
                Millionen Urteilen gehören bei uns zum Standard.
            </p>
        </div>
    </Section>

    <!-- Locations -->
    <Section background="light" padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-8 text-center"
            style="color: #003466;"
        >
            Unsere Standorte
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
            {locations.map((location) => <LocationCard location={location} />)}
        </div>
    </Section>

    <!-- CTA -->
    <CTASection title="Lernen Sie uns persönlich kennen." />
</BaseLayout>
