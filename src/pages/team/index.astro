---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/astro/Section.astro";
import PageHeader from "../../components/astro/PageHeader.astro";
import TeamGrid from "../../components/astro/TeamGrid.astro";
import CTASection from "../../components/astro/CTASection.astro";
import { lawyers, assistants } from "../../data/team";
import { images } from "../../data/images";

const seo = {
    title: "Team",
    description:
        "Unsere Rechtsanwältinnen und Rechtsanwälte sind Spezialisten auf ihrem Gebiet. Alle unsere Anwälte haben eine erfolgreich abgeschlossene Ausbildung auf mehreren Fachanwaltsgebieten.",
};
---

<BaseLayout title={seo.title} description={seo.description}>
    <PageHeader
        title="Unser Team"
        subtitle="Unsere Rechtsanwältinnen und Rechtsanwälte – Spezialisten auf ihrem Gebiet – und weit darüber hinaus."
        backgroundImage={images.pageHeaders.team}
    />

    <!-- Intro -->
    <Section background="light" padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-6"
            style="color: #003466;"
        >
            Kompetenz und Erfahrung
        </h2>
        <div class="prose prose-lg max-w-none text-neutral-600 space-y-4">
            <p>
                Alle unsere Anwälte haben eine erfolgreich abgeschlossene
                Ausbildung auf mehreren Fachanwaltsgebieten. Sie sind aber auch
                darüber hinaus auf weiteren Gebieten schwerpunktmäßig tätig und
                verfügen über eine langjährige außergerichtliche und
                gerichtliche Erfahrung.
            </p>
            <p>
                Unsere Anwälte bilden sich ständig fort und garantieren Ihnen
                damit einen stets aktuellen Wissensstand auf hohem Niveau. Sie
                halten aber auch regelmäßig eigene Vorträge in unseren
                Kanzleiräumen für interessierte Zuhörer und organisieren
                Fortbildungen für andere Anwälte.
            </p>
        </div>

        <div
            class="mt-8 inline-flex items-center gap-2 px-4 py-2 bg-[--color-accent-100] text-[--color-accent-800] rounded-full text-sm font-medium"
        >
            <span>Über 40 Jahre Erfahrung und Kompetenz</span>
        </div>
    </Section>

    <!-- Lawyers Section -->
    <Section padding="lg">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-8"
            style="color: #003466;"
        >
            Unsere Anwälte
        </h2>
        <TeamGrid members={lawyers} columns={3} />
    </Section>

    <!-- Assistants Section -->
    <Section padding="lg" background="light">
        <h2
            class="text-2xl md:text-3xl font-serif font-bold mb-6"
            style="color: #003466;"
        >
            Anwaltsassistentinnen
        </h2>
        <p class="text-neutral-600 max-w-3xl mb-8">
            Unsere Mandanten schätzen die Freundlichkeit, Zuverlässigkeit und
            professionelle Kompetenz unserer Anwaltsassistentinnen ebenso, wie
            die angenehme Kanzleiatmosphäre.
        </p>
        <TeamGrid members={assistants} showDetails={false} columns={4} />
    </Section>

    <!-- CTA -->
    <CTASection />
</BaseLayout>
